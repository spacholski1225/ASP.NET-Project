@model ComplaintFormViewModel
@{
    ViewData["Title"] = "Description";
}

<h1 class="display-4">Complaint form</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Company">Company name</label>
        <input class="form-control" asp-for="Company" placeholder="Company name..."/>
        <span asp-validation-for="Company"></span>
    
        <label asp-for="ERobotsCategory">Select our robot</label>
        <select multiple class="form-control" asp-for="ERobotsCategory" asp-items="Html.GetEnumSelectList<ERobotsCategory>()">
        </select>
        <span asp-validation-for="ERobotsCategory"></span>
    </div>
    <div class="form-group">
        <label>Please descript your problem.</label>
        <textarea rows="3" asp-for="Description" class="form-control" placeholder="Your problem..."></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div >
        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>