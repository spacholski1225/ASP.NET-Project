@model SummaryViewModel
@{
    ViewData["Title"] = "Summary";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

<form method="post" style="width:100%">
    <div class="row">
        <div class="col-4" style="width:100%">
            <div hidden>
                <input class="hidden" asp-for="UserId" />
                <input class="hidden" asp-for="ApplicationUser.Id" />
            </div>
            <div class="col">
                <label asp-for="ERobotsCategory"></label>
                <input class="form-control" asp-for="ERobotsCategory" readonly />
                <span asp-validation-for="ERobotsCategory" class="alert-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Company"></label>
                <input class="form-control" asp-for="Company" readonly />
                <span asp-validation-for="Company" class="alert-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Country"></label>
                <input class="form-control" asp-for="Country" readonly />
                <span asp-validation-for="Country" class="alert-danger"></span>
            </div>
            <div class="col">
                <label asp-for="City"></label>
                <input class="form-control" asp-for="City" readonly />
                <span asp-validation-for="City" class="alert-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Adress"></label>
                <input class="form-control" asp-for="Adress" readonly />
                <span asp-validation-for="Adress" class="alert-danger"></span>
            </div>
            <div class="col">
                <label asp-for="ZipCode"></label>
                <input class="form-control" asp-for="ZipCode" readonly />
                <span asp-validation-for="ZipCode" class="alert-danger"></span>
            </div>
        </div>
        <div class="col-8">
            <div>
                <label asp-for="Description"></label>
                <textarea class="form-control" style="height:387px" asp-for="Description" readonly></textarea>
                <span asp-validation-for="Description" class="alert-danger"></span>
            </div>
        </div>
    </div>
    <div style="margin:10px 0 0 50%">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
            Submit
        </button>
        <button class="btn btn-success" asp-action="Form" asp-controller="Form">Back</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Alert</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-success" asp-route-isOkay="@true">Yes</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/js/modal.js"></script>