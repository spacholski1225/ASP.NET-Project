@model EmployeeRegistrationViewModel

@{
    ViewData["Title"] = "Add Employee";
}

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group col-md-6">
        <label asp-for="UserName" class="form-check-label">UserName (your email)</label>
        <input asp-for="UserName" class="form-control" placeholder="Email" />
        <span asp-validation-for="UserName" class="alert-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Password" class="form-check-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
        <span asp-validation-for="Password" class="alert-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ConfirmPassword" class="form-check-label">Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Password" />
        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
    </div>
    <button class="btn-success  text-md-center" type="submit">Login</button>
</form>