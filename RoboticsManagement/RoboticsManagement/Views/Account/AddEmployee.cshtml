@model EmployeeRegistrationViewModel

@{
    ViewData["Title"] = "Add Employee";
}

<form method="post">
    <div asp-validation-summary="All" class="alert-danger"></div>
    <div class="form-floating col-md-6">
        <label asp-for="UserName" class="form-check-label">UserName</label>
        <input asp-for="UserName" class="form-control" placeholder="Email" />
        <span asp-validation-for="UserName" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="Password" class="form-check-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
        <span asp-validation-for="Password" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="ConfirmPassword" class="form-check-label">ConfirmPassword</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="Email" class="form-check-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
        <span asp-validation-for="FirstName" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control" placeholder="LastName" />
        <span asp-validation-for="LastName" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" placeholder="Country" />
        <span asp-validation-for="Country" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="City" />
        <span asp-validation-for="City" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="Adress">Adress</label>
        <input asp-for="Adress" class="form-control" placeholder="Adress" />
        <span asp-validation-for="Adress" class="alert-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <label asp-for="ZipCode">ZipCode</label>
        <input asp-for="ZipCode" class="form-control" placeholder="ZipCode" />
        <span asp-validation-for="ZipCode" class="alert-danger"></span>
    </div>
    <br />
    <div class="form-floating col-md-6">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-success">Cancel</a>
    </div>
</form>