@model TaskViewModel
@{
    ViewData["Title"] = "Concrete task ";
}

<form method="post">
    <div class="row">
        <label asp-for="Company"></label>
        <input class="form-control" asp-for="Company" readonly />
        <span asp-validation-for="Company" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="CreatedDate"></label>
        <input type="datetime" class="form-control" asp-for="CreatedDate" readonly />
        <span asp-validation-for="CreatedDate" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="NIP"></label>
        <input class="form-control" asp-for="NIP" readonly />
        <span asp-validation-for="NIP" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="Regon"></label>
        <input class="form-control" asp-for="Regon" readonly />
        <span asp-validation-for="Regon" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="Country"></label>
        <input class="form-control" asp-for="Country" readonly />
        <span asp-validation-for="Country" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="City"></label>
        <input class="form-control" asp-for="City" readonly />
        <span asp-validation-for="City" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="Adress"></label>
        <input class="form-control" asp-for="Adress" readonly />
        <span asp-validation-for="Adress" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="ZipCode"></label>
        <input class="form-control" asp-for="ZipCode" readonly />
        <span asp-validation-for="ZipCode" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" readonly />
        <span asp-validation-for="Description" class="alert-danger"></span>
    </div>
    <div class="row">
        <label asp-for="ERobotsCategory"></label>
        <input class="form-control" asp-for="ERobotsCategory" readonly />
        <span asp-validation-for="ERobotsCategory" class="alert-danger"></span>
    </div>
    <button class="btn btn-primary" style="margin-top:10px" type="submit" asp-route-isSure=@true>Generate XML</button>@*change isSure parametr to checkbox or sth else*@
    <a class="btn btn-primary" style="margin-top:10px"  asp-action="FinishedTasks" asp-controller="Task">Back</a>
</form>